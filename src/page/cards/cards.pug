extends ../../layout/ui-kit.pug
include ../../components/date-wishes/date-wishes
include ../../components/total-card/total-card
include ../../components/date-picker/date-picker
include ../../components/register-card/register-card
include ../../components/auth-card/auth-card
include ../../components/hotel-card/hotel-card
block variables
  -
    const title = "Toxin - карточки";
    const pageClass = "cards-page";

block content
  .container
    .cards-page__wrap
      .cards-page__row
        .cards-page__item
          +dateWishes()
        .cards-page__item
          +registerCard()
      .cards-page__row
        .cards-page__item
          +totalCard({
            arrivalInputPlaceholder: "19.08.2019",
            departureInputPlaceholder: "23.08.2019"
          })
        .cards-page__item
          +authCard()  
      .cards-page__row
        .cards-page__item
          .card-page__stub-card
            +datePicker()
        .cards-page__item
          +hotelCard({
            numberHotel: 888,
            isLux: true,
            reviewCount: 145,
            dayCost: "9 900",
            starCount: 5,
            idRateBtn: "luxHotelRate",
            images: [
              { src: "../../components/hotel-card/one-hotel.png", alt: "Красивый отель" }
            ]
          })
          +hotelCard({
            numberHotel: 840,
            isBtnSliderHide: true,
            reviewCount: 65,
            dayCost: "9 900",
            starCount: 4,
            idRateBtn: "hotelRate",
            images: [
              { src: "../../components/hotel-card/double-hotel.png", alt: "Красивый отель" }
            ]
          })
