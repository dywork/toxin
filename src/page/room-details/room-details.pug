extends ../../layout/main.pug
include ../../components/features/features
include ../../components/pie-chart/pie-chart
include ../../components/comment/comment
include ../../components/bullet-list/bullet-list
include ../../components/total-card/total-card

block variables
  -
    const title = "Toxin - детали комнаты!";
    const description = "Room details description";
    const keywords = "Toxin keywords";
    const pageClass = "room-details";
    const footerBorderTop = true;

block content
  .room-details__picture 
    .room-details__picture-big
      img(src="room-details-1.jpg", alt="Детали комнаты")
    .room-details__picture-miniature
      img(src="room-details-2.jpg", alt="Детали комнаты")
      img(src="room-details-3.jpg", alt="Детали комнаты")
  .container
    .room-details__wrap
      .room-details__content
        .room-details__content-wrap
          .room-details__column
            section.room-details__intellig
              h2.room-details__title Сведения о номере
              +features({
                items: [
                  {
                    title: "Комфорт",
                    descr: "Шумопоглощающие стены",
                    srcIcon: "../../components/features/emoticon.png"
                  },
                  {
                    title: "Удобство",
                    descr: "Окно в каждой из спален",
                    srcIcon: "../../components/features/city.png"
                  },
                  {
                    title: "Уют",
                    descr: "Номер оснащён камином",
                    srcIcon: "../../components/features/whatshot.png"
                  }
                ]
              })
            section.room-details__impression
              h2.room-details__title Впечатления от номера
              +pieChart()
          section.room-details__reviews
            h2(class="room-details__title  room-details__title_low-mb") Отзывы посетителей номера #[span.room-details__title-alt 2 отзыва]
            +comment({
                authorName: "Мурад Сарафанов",
                datePost: "5 дней назад",
                like: 12,
                isLikeActive: true,
                avatarSrc: "../../components/comment/murad.png",
                text:
                  "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."
              })
            +comment({
              authorName: "Патрисия Стёклышкова",
              datePost: "Неделю назад",
              like: 2,
              isLikeActive: false,
              avatarSrc: "../../components/comment/patric.png",
              text:
                "Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент"
            })
          .room-details__column
            +bullet({
              title: "Правила",
              isBigTitle: true,
              isTitleLeftPadding: true,
              items: [
                { label: "Нельзя с питомцами" },
                { label: "Без вечеринок и мероприятий" },
                { label: "Время прибытия — после 13:00, а выезд до 12:00", isPetty: true }
              ]
            })
            section.room-details__info
              h2.room-details__title Отмена
              p Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
      .room-details__total-card-wrap
        +totalCard({ datePickerContainerCLass: 'room-details__date-picker-container' })
