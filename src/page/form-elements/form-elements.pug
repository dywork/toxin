extends ../../layout/ui-kit.pug
include ../../components/input/input
include ../../components/checkbox/checkbox
include ../../components/radiobtn/radiobtn
include ../../components/toggle/toggle
include ../../components/likebtn/likebtn
include ../../components/ratebtn/ratebtn
include ../../components/range-slider/range-slider
include ../../components/button/button
include ../../components/title/title
include ../../components/pagination/pagination
include ../../components/features/features
include ../../components/bullet-list/bullet-list
include ../../components/comment/comment

block variables
  -
    const title = "Toxin - элементы форм"
    const pageClass = "form-elements"

block content
  .container
    .ui-kit
      .ui-kit__wrap
        .ui-kit__box
          .ui-kit__inputs
            +input({
              id: "textField",
              type: "text",
              placeholder: "Email",
              labelName: "Text field",
              isBigLabel: true,
              descrText: "Default"
            })
            +input({
              id: "textFieldHover",
              type: "text",
              placeholder: "This is pretty awesome",
              labelName: "Text field",
              isBigLabel: true,
              descrText: "Hover / Focus",
              isHover: true
            })
            +input({
              id: "number-guests-input",
              isFakeInput: true,
              labelName: "Dropdown",
              isButtonSplit: true,
              isDownSplitAnimation: true,
              isHaveIcon: true,
              placeholder: "Сколько гостей",
              isBigLabel: true,
              descrText: "Default"
            })
            +input({
              id: "maskedTextField",
              type: "text",
              placeholder: "ДД.ММ.ГГГГ",
              labelName: "Masked text field",
              isBigLabel: true,
              descrText: "Default"
            })
            .ui-kit__inputs-column
              +input({
                id: "arrival-input",
                splitId: "arrival-split-btn",
                labelName: "Date Dropdown",
                isButtonSplit: true,
                isDownSplitAnimation: true,
                iconSrc: "expand-more.svg",
                placeholder: "ДД.ММ.ГГГГ",
                isDarkPlaceholder: true,
                isBigLabel: true
              })
              +input({
                id: "departure-input",
                splitId: "departure-split-btn",
                labelName: "Date Dropdown",
                isButtonSplit: true,
                isDownSplitAnimation: true,
                iconSrc: "expand-more.svg",
                placeholder: "19.08.2019",
                isDarkPlaceholder: true,
                isBigLabel: true
              })
            div(class="ui-kit__inputs-column  ui-kit__inputs-column--small")
              +input({
                id: "filterDateDropdown",
                isFakeInput: true,
                labelName: "Filter date dropdown",
                isButtonSplit: true,
                isDownSplitAnimation: true,
                isHaveIcon: true,
                placeholder: "19 авг - 23 авг",
                isBigLabel: true
              })
            div(class="ui-kit__inputs-column  ui-kit__inputs-column--small")
              +input({
                isButtonSplit: true,
                labelName: "Subscription text field",
                isBigLabel: true,
                iconSrc: "arrow-forward.svg",
                type: "email",
                placeholder: "Email",
                isRightSplitAnimation: true
              })
          .ui-kit__column
            .ui-kit__column-row
              +checkbox({
                title: "Checkbox Buttons",
                items: [
                  { id: "smoke", title: "Можно курить" },
                  { id: "pets", title: "Можно с питомцами", isChecked: true },
                  { id: "guest", title: "Можно пригласить гостей (до 10 человек)", isChecked: true }
                ]
              })
            .ui-kit__column-row
              +radiobtn({
                title: "Radio Buttons",
                items: [
                  { groupName: "gender", id: "male", title: "Мужчина", isChecked: true },
                  { groupName: "gender", id: "famale", title: "Женщина" }
                ]
              })
            .ui-kit__column-row
              +toggle({
                title: "Toggle",
                items: [
                  { id: "giveSpec", title: "Получать спецпредложения", isChecked: true },
                  { id: "notGiveSpec", title: "Получать спецпредложения" }
                ]
              })
            .ui-kit__column-row
              +likebtn({
                title: "like button",
                items: [
                  { count: 2 },
                  { count: 12, isLike: true }
                ]
              })
            .ui-kit__column-row
              +ratebtn({
                title: "rate button",
                items: [
                  { idGroup: "rating1", currentRating: 4 },
                  { idGroup: "rating2", currentRating: 5 }
                ]
              })
          div(class="ui-kit__column  ui-kit__column--xls")
            div(class="ui-kit__column-row  ui-kit__column-row--large")
              +rangeSlider({ title: "Range Slider", min: '5 000', max: '10 000' })
            div(class="ui-kit__column-row  ui-kit__column-row--small")
              +title({ title: "Buttons" })
              +button({ title: "Click me" })
              +button({ title: "Click me", isDisable: true })
            div(class="ui-kit__column-row  ui-kit__column-row--small")
              +button({ title: "Click me", isEmptyStyle: true })
              +button({ title: "Click me", isEmptyStyle: true, isDisable: true })
            div(class="ui-kit__column-row  ui-kit__column-row--small")
              a(href="#" class="ui-kit__link  ui-kit__link--hover") click me
              a(href="#" class="ui-kit__link") click me
            div(class="ui-kit__column-row  ui-kit__column-row--lwidth")
              +button({ title: 'Перейти к оплате', isHaveIcon: true, buttonType: 'submit' })
            .ui-kit__column-row
              +pagination({ title: 'Pagination' })
        div(class="ui-kit__box  ui-kit__box--nm")
          div(id="drop-down-container" class="ui-kit__column")
            +input({
              id: "number-guests-input1",
              isFakeInput: true,
              labelName: "Dropdown",
              isButtonSplit: true,
              isDownSplitAnimation: true,
              isHaveIcon: true,
              placeholder: "2 спальни, 2 кровати...",
              isBigLabel: true,
              descrText: "Default"
            })
            +input({
              id: "number-guests-input2",
              isFakeInput: true,
              labelName: "Dropdown",
              isButtonSplit: true,
              isDownSplitAnimation: true,
              isHaveIcon: true,
              placeholder: "2 спальни, 2 кровати...",
              isBigLabel: true,
              descrText: "Expanded"
            })
            div(class="ui-kit__column-row  ui-kit__column-row--mt-large")
              +checkbox({
                title: "Expandable checkbox list",
                isExpandable: true
              })
            .ui-kit__column-row
              +checkbox({
                title: "Expandable checkbox list",
                isExpandable: true,
                isExpandableOpen: true,
                items: [
                  { id: "breakfast", title: "Завтрак" },
                  { id: "pen", title: "Письменный стол", isChecked: true },
                  { id: "break-sit", title: "Стул для кормления", isChecked: true },
                  { id: "bed", title: "Кроватка", isChecked: true },
                  { id: "tv", title: "Телевизор" },
                  { id: "shampu", title: "Шампунь" },
                  { id: "tv2", title: "Телевизор" },
                  { id: "shampu2", title: "Шампунь" },
                ]
              })
          div(id="drop-down-container2" class="ui-kit__column  ui-kit__column--mls  ui-kit__column--wl")
            +input({
              id: "number-guests-input3",
              isFakeInput: true,
              labelName: "Dropdown",
              isButtonSplit: true,
              isDownSplitAnimation: true,
              isHaveIcon: true,
              placeholder: "Сколько гостей",
              isBigLabel: true
            })
            div(class="ui-kit__column-row  ui-kit__column-row--bunny-hop")
              +checkbox({
                title: "Rich Checkbox Buttons",
                isRich: true,
                items: [
                  {
                    id: "wild",
                    title: "Широкий коридор",
                    descr: "Ширина коридоров в номере не менее 91 см."
                  },
                  {
                    id: "help",
                    title: "Помощник для инвалидов",
                    descr: "На 1 этаже вас встретит специалист  и проводит до номера."
                  }
                ]
              })
          div(id="drop-down-container3" class="ui-kit__column  ui-kit__column--wl  ui-kit__column--lms")
            +input({
              id: "number-guests-input4",
              isFakeInput: true,
              labelName: "Dropdown",
              isButtonSplit: true,
              isDownSplitAnimation: true,
              isHaveIcon: true,
              placeholder: "Сколько гостей",
              isBigLabel: true
            })
            div(class="ui-kit__column-row  ui-kit__column-row--bunny-hop")
              +bullet({
                title: "Bullet list",
                items: [
                  { label: "Нельзя с питомцами" },
                  { label: "Без вечеринок и мероприятий" },
                  { label: "Время прибытия — после 13:00, а выезд до 12:00" }
                ]
              })
        div(class="ui-kit__box")
          .ui-kit__column
            +features({
              items: [
                {
                  title: "Комфорт",
                  descr: "Шумопоглощающие стены",
                  srcIcon: "../../components/features/emoticon.png"
                },
                {
                  title: "Удобство",
                  descr: "Окно в каждой из спален",
                  srcIcon: "../../components/features/city.png"
                }
              ]
            })
          div(class="ui-kit__column  ui-kit__column--mls")
            +comment({
              authorName: "Мурад Сарафанов",
              datePost: "5 дней назад",
              like: 12,
              avatarSrc: "../../components/comment/murad.png",
              text:
                "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей."
            })  
