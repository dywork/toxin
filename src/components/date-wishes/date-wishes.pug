include ../typography/typography
include ../button/button
include ../date-input/date-input

mixin dateWishes
  section.date-wishes
    .date-wishes__wrap
      form(action='rooms.html')
        fieldset.date-wishes__fieldset
          legend.date-wishes__title Найдём номера под ваши пожелания
          .date-wishes__group
            +dateInput([ { title: 'Прибытие', value: 'ДД.ММ.ГГГГ', classForJs: 'js-arrival-input' }, { title: 'Выезд', value: 'ДД.ММ.ГГГГ', classForJs: 'js-departure-input' }, ])
            .date-picker-container.js-date-picker-container.date-wishes__date-picker-container
          .date-wishes__title-wrap
            +typography({ text: 'Гости', variant: 'h3', hasUpper: true }) 
          +dropDownInput({ text: 'Сколько гостей', classForJs: 'js-input-drop-down' })
          .drop-down-counter-container.js-drop-down-counter-container
        +button({ title: 'Подобрать номер', withIcon: true, buttonType: 'submit' })
