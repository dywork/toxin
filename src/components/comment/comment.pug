include ../likebtn/likebtn

mixin comment(options = {})
  -
    const {
      avatarSrc,
      authorName,
      likeCount,
      likeIsActived,
      datePost,
      text,
    } = options;

  .comment
    .comment__wrap
      .comment__column
        .comment__avatar
          img(class="comment__avatar-img" src=avatarSrc alt=authorName)
        +likebtn({ count: likeCount, isActived: likeIsActived })
      .comment__column
        p.comment__title= authorName 
        p.comment__date= datePost
        p.comment__text= text 