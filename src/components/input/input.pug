mixin input(options = {})
  -
    const {
      type,
      name,
      placeholder,
      value,
      isFocused,
      withButton,
      classForJs,
    } = options;

    let inputBaseClass = "input__base";

    if (isFocused) {
      inputBaseClass += " input__base_focused";
    }
    
    if (withButton) {
      inputBaseClass += " input__base_with-button";
    }

    if (classForJs) {
      inputBaseClass += ` ${classForJs}`;
    }

  .input
    .input__wrap
      input(class=inputBaseClass type=type name=name placeholder=placeholder value=value)
      if withButton
        button(class="input__button" type="submit")
