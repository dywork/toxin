mixin input(options = {})
  -
    const { type, name, placeholder, value, isFocused, withButton, classForJs } = options;
    let inputClass = "input-group__input";

    if (isFocused) {
      inputClass += " input-group__input_focused";
    }
    
    if (withButton) {
      inputClass += " input-group__input_with-button";
    }

    if (classForJs) {
      inputClass += ` ${classForJs}`;
    }

  .input-group
    .input-group__wrap
      input(class=inputClass type=type name=name placeholder=placeholder value=value)
      if withButton
        button(class="input-group__button" type="submit")
