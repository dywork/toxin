mixin ratebtn({ currentRating, ratingLength })
  .ratebtn
    .ratebtn__wrap
      - for (let i = 0; i < ratingLength; ++i) {
        -
          const isActive = i < currentRating;
          let starClass = "ratebtn__star";

          if (isActive) {
            starClass += " ratebtn__star_active"
          }
        
        div(class=starClass)
      - }
