include ../ratebtn/ratebtn

mixin hotelCard(options = {})
  -
    const sliderBtnClass = options.isBtnSliderHide
      ? "hotel-card__slider-control  hotel-card__slider-control_hiden"
      : "hotel-card__slider-control";
  section.hotel-card
    div(class="hotel-card__wrap  glide")
      div(class="hotel-card__slider  glide__track" data-glide-el="track")
        ul.glide__slides
          each image in options.images
            li.glide__slide #[img(src=image.src, alt=image.alt)]
        div(class="glide__arrows" data-glide-el="controls")
          button(class="glide__arrow  glide__arrow_left  hotel-card__slider-btn" data-glide-dir="<" type="button") Назад
          button(class="glide__arrow  glide__arrow_right  hotel-card__slider-btn  hotel-card__slider-btn_next" data-glide-dir=">" type="button") Вперед
        div(class="hotel-card__bullets  glide__bullets" data-glide-el="controls[nav]")
          each image, index in options.images
            button(class="glide__bullet" data-glide-dir=`=${index}` type="button")
      .hotel-card__info
        .hotel-card__info-item
          if (options.isLux)
            h2.hotel-card__title 
              a(href="/room-details.html") № #[span= options.numberHotel] #[b люкс]
          else 
            h2.hotel-card__title
              a(href="/room-details.html") № #[span= options.numberHotel]
          p.hotel-card__text #[b= options.dayCost + "₽"] в сутки
        .hotel-card__info-item
          +ratebtn({ items: [{ idGroup: options.idRateBtn, currentRating: options.starCount }] })
          p(class="hotel-card__text  hotel-card__text_fzlarge") #[b= options.reviewCount] Отзывов