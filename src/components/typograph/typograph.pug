mixin typograph(options = {})
  -
    const isTitle = !!options.title;

    const labelClass = options.labelModif
      ? `typograph__label  typograph__label_${options.labelModif}`
      : "typograph__label";

    const titleClass = options.titleModif
      ? `typograph__title  typograph__title_${options.titleModif}`
      : "typograph__title";

    let textClass = options.textModif
      ? `typograph__text  typograph__text_${options.textModif}`
      : "typograph__text";
    
    if (options.isTinyText) {
      textClass += "  typograph__text_tiny";
    }

  section.typograph
    .typograph__wrap
      p(class=labelClass)= options.label
      if (isTitle)
        h2(class=titleClass)= options.title
      else
        p(class=textClass)= options.text
