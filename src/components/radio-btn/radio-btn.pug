mixin radioBtn({ items })
  .radio-btn
    .radio-btn__wrap
      ul.radio-btn__list
        each item in items
          - const {label, groupName, isChecked} = item;

          li.radio-btn__item
            label.radio-btn__label
              input.radio-btn__input(
                name=groupName,
                type='radio',
                checked=isChecked
              )
              span.radio-btn__label-text= label
