mixin mainMenu(menuItems)

  div(class="main-menu js-main-menu")
    div(class="main-menu__burger-icon js-main-menu-burger-btn")
      span
      span
      span
    nav.main-menu__nav
      ul.main-menu__list
        each item in menuItems
          -
            const { title, subMenu, isActive } = item;
            let { path } = item;
            let itemClass = "main-menu__item";

            if (subMenu) {
              itemClass += " main-menu__item_sub-menu js-main-menu-item-sub-menu";
            }

            if (isActive) {
              itemClass += " main-menu__item_active";
              path = null;
            }

          li(class=itemClass)
            a(class="main-menu__item-link" href=path)= title
            if subMenu
              ul(class="main-menu__sub-menu")
                each subItem in subMenu
                  li.main-menu__sub-item
                    a(class="main-menu__item-link" href=subItem.path)= subItem.title