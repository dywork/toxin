mixin mainMenu(menuItems, cssClass)
  -
    const { mainMenuClass, burgerBtnClass } = cssClass;
    let menuClass = "main-menu";

    if (mainMenuClass) {
      menuClass += ` ${mainMenuClass}`;
    }

    let burgerClass = "main-menu__burger-icon";

    if (burgerBtnClass) {
      burgerClass += ` ${burgerBtnClass}`;
    }

  div(class=menuClass)
    div(class=burgerClass)
      span
      span
      span
    nav.main-menu__nav
      ul.main-menu__list
        each item in menuItems
          -
            const { title, path, subMenu, isActive } = item;
            let itemClass = "main-menu__item";

            if (subMenu) {
              itemClass += "  main-menu__item_sub-menu";
            }

            if (isActive) {
              itemClass += "  main-menu__item_active";
              path = null;
            }

          li(class=itemClass)
            a(class="main-menu__item-link" href=path)= title
            if subMenu
              ul.main-menu__sub-menu
                each subItem in subMenu
                  li.main-menu__sub-item
                    a(class="main-menu__item-link" href=subItem.path)= subItem.title