mixin mainMenu(menuItems, id)
  -
    const mainMenuId = id.mainMenu ? id.mainMenu : "mainMenu";
    const burgerId = id.burgerBtn ? id.burgerBtn : "mainMenuBurgerIcon";

  div(id=mainMenuId class="main-menu")
    div(id=burgerId class="main-menu__burger-icon")
      span
      span
      span
    nav.main-menu__nav
      ul.main-menu__list
        each item in menuItems
          -
            const isActive = item.id === id.currentPage;
            let itemClass = "main-menu__item";
            if (item.subMenu) {
              itemClass += "  main-menu__item_sub-menu";
            }
            if (isActive) {
              itemClass += "  main-menu__item_active";
              item.path = null;
            }

          li(class=itemClass)
            a(class="main-menu__item-link" href=item.path)= item.title
            if item.subMenu
              ul.main-menu__sub-menu
                each subItem in item.subMenu
                  li.main-menu__sub-item
                    a(class="main-menu__item-link" href=subItem.path)= subItem.title