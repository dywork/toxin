mixin mainMenu(menuItems, currentPageId)
  div.main-menu
    div(id="mainMenuBurgerIcon" class="main-menu__burger-icon")
      span
      span
      span
    nav
      ul.main-menu__list
        each item in menuItems
          -
            const isActive = item.id === currentPageId;
            let itemClass = "main-menu__item";
            if (item.subMenu) {
              itemClass += "  main-menu__item--sub-menu";
            }
            if (isActive) {
              itemClass += "  main-menu__item--active";
              item.path = null;
            }

          li(class=itemClass)
            a(href=item.path)= item.title
            if item.subMenu
              ul.main-menu__sub-menu
                each subItem in item.subMenu
                  li.main-menu__sub-item
                    a(href=subItem.path)= subItem.title