mixin header( options = {} )
  - var authClass = options.userName ? "page-header__auth  page-header__auth--is-auth" : "page-header__auth"
  header.page-header
    .container
      .page-header__wrap
        +logo()
        +mainMenu(menuItems)
        section(class=authClass)
          if options.userName
            p.page-header__user-name= options.userName
          else
            +button({ title: 'Войти', path: '/auth.html', isEmptyStyle: true })
            +button({ title: 'Зарегистрироваться', path: '/registration.html' })
            ul.page-header__auth-list
              li.page-header__auth-item
                a(href="#") Войти
              li.page-header__auth-item
                a(href="#") Зарегистрироваться
            button(id="authProfile" class="page-header__auth-profile" type="button")