include ../logo/logo
include ../button/button
include ../main-menu/main-menu

-
  const menuItems = [
    { title: "О нас", path: "#" },
    {
      title: "Услуги",
      path: "#",
      subMenu: [
        { title: "Подбор отелей", path: "#" },
        { title: "Заказать трансфер", path: "#" },
        { title: "Рейтинг отелей", path: "#" }
      ]
    },
    { title: "Вакансии", path: "#" },
    { title: "Новости", path: "#" },
    {
      title: "Соглашения",
      path: "#",
      subMenu: [
        { title: "Пользовательские", path: "#" },
        { title: "Международные", path: "#" }
      ]
    }
  ];

  const menuEngItems = [
    { title: "Home", path: "#" },
    { title: "About us", path: "#" },
    { title: "Services", path: "", subMenu: [{ title: "service" }] },
    { title: "Careers", path: "#" },
    { title: "News", path: "#" },
    { title: "Documentation", path: "#" },
  ];

mixin header( options = {} )
  -
    const authClass = options.userName ? "page-header__auth  page-header__auth--is-auth" : "page-header__auth";
    const currentMenuItems = options.isEnglish ? menuEngItems : menuItems;
    const authBtnTitle = options.isEnglish ? "Login" : "Войти";
    const registerBtnTitle = options.isEnglish ? "Register" : "Зарегистрироваться";

  header.page-header
    .container
      .page-header__wrap
        +logo()
        +mainMenu(currentMenuItems)
        section(class=authClass)
          if options.userName
            p.page-header__user-name= options.userName
          else
            +button({ title: authBtnTitle, path: "/auth.html", isEmptyStyle: true })
            +button({ title: registerBtnTitle, path: "/registration.html" })
            ul.page-header__auth-list
              li.page-header__auth-item
                a(href="#")= authBtnTitle
              li.page-header__auth-item
                a(href="#")= registerBtnTitle
            button(id="authProfile" class="page-header__auth-profile" type="button")