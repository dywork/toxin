mixin datePicker({ month, year, calendar })
  -
    const daysWeekNames = ["Пн", "Вт", "Ср", "Чт", "Пт", "Сб", "Вс"];

  div(class="date-picker date-picker_opened date-picker_static")
    .date-picker__wrap
      .date-picker__control
        button(class="date-picker__slider-btn date-picker__slider-btn_prev" type="button")
        h2(class="date-picker__title")= `${month} ${year}`
        button(class="date-picker__slider-btn date-picker__slider-btn_next" type="button")
      table.date-picker__calendar
        thead
          tr
            each dayName in daysWeekNames
              th.date-picker__th= dayName
        tbody
          each week in calendar
            tr
              each day in week
                -
                  const { name, isCurrent, isOutRange } = day;
                  let cellClass = 'date-picker__day';

                  if (isCurrent) {
                    cellClass += ' date-picker__day_current';
                  }

                  if (isOutRange) {
                    cellClass += ' date-picker__day_not-current';
                  }

                td(class=cellClass)= name
      .date-picker__control
        button(class="date-picker__button" type="button") Очистить
        button(class="date-picker__button date-picker__button_accentuating" type="button") Применить