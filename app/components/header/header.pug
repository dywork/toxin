include ../logo/logo
include ../button/button
include ../main-menu/main-menu

-
  var menuItems = [
    { title: 'О нас', path: '#' }, 
    { 
      title: 'Услуги', 
      path: '#', 
      subMenu: [ 
        { title: 'Item 1', path: '#' }, 
        { title: 'Item 2', path: '#' }, 
        { title: 'Item 3', path: '#' } 
      ]
    }, 
    { title: 'Вакансии', path: '#' },
    { title: 'Новости', path: '#' },
    { 
      title: 'Соглашения', 
      path: '#',
      subMenu: [ 
        { title: 'Item 1', path: '#' }, 
        { title: 'Item 2', path: '#' }, 
        { title: 'Item 3', path: '#' } 
      ]
    }
  ]

mixin header(options)
  header.page-header
    .container
      .page-header__wrap
        +logo({width: 120, height: 60})
        +mainMenu(menuItems)
        .page-header__auth
          if options.userName
            p.page-header__user-name= options.userName
          else
            +button({ title: 'Войти', path: '#', isEmptyStyle: true })
            +button({ title: 'Зарегистрироваться', path: '#' })